{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",

    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,

    /* Recomendação Forte: Mude para true para evitar bugs silenciosos */
    "strict": true,

    "baseUrl": ".",
    
    /* AQUI ESTÁ A MÁGICA */
    "paths": {
      "@/*": ["./src/*"]
    },

    "plugins": [{ "name": "next" }],
    "types": ["node"],
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "playwright.config.ts",
    "playwright-ct.config.ts",
    "playwright-report",
    "test-results",
    "tests",
    "e2e",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}